<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_bg"
        android:clickable="true"
        android:orientation="vertical"
        android:focusable="true">

    <LinearLayout
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="12dp"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <FrameLayout
                android:background="@drawable/rounded_primary_rad"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/frameLayout"
                tools:layout_editor_absoluteY="16dp">
            <Spinner
                    android:id="@+id/spinnerCurrencySensitivity"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"/>
        </FrameLayout>
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:padding="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_white">

                <TextView
                        style="@style/TextHeader"
                        android:text="USD-IDR Forward Curve Simulation"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp"
                        android:id="@+id/tvHeaderPosition"
                        android:layout_width="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"/>

                <View android:layout_width="match_parent"
                      android:layout_height="0.8dp"
                      android:background="@color/home_bg"
                      app:layout_constraintTop_toBottomOf="@+id/tvHeaderPosition"
                      android:layout_marginTop="16dp"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:id="@+id/view"/>

                <FrameLayout
                        android:padding="8dp"
                        android:background="@drawable/card_view"
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/view"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        app:layout_constraintEnd_toStartOf="@+id/imgMenuPosition"
                        android:id="@+id/frameLayoutPosition">

                    <TextView
                            android:layout_marginStart="8dp"
                            android:layout_gravity="center_vertical"
                            android:text="Implied Forward Rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:layout_marginEnd="8dp"
                            android:textStyle="bold"
                            android:gravity="end"
                            android:layout_marginStart="8dp"
                            android:layout_gravity="center_vertical|end"
                            android:text="20,54%"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </FrameLayout>

                <ImageView
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="@null"
                        android:padding="8dp"
                        android:src="@drawable/ic_sort"
                        android:background="@drawable/rec_hallow_primary"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        android:id="@+id/imgMenuPosition"
                        app:layout_constraintTop_toTopOf="@+id/frameLayoutPosition"
                        app:layout_constraintStart_toEndOf="@+id/frameLayoutPosition"/>

                <com.github.mikephil.charting.charts.LineChart
                        android:layout_width="0dp"
                        android:layout_height="270dp"
                        app:layout_constraintTop_toBottomOf="@+id/frameLayoutPosition"
                        app:layout_constraintStart_toStartOf="@+id/tvHeaderPosition"
                        app:layout_constraintEnd_toEndOf="@+id/tvHeaderPosition"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="24dp"
                        android:id="@+id/lineChartCurrency">

                </com.github.mikephil.charting.charts.LineChart>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_white">

                <TextView
                        style="@style/TextHeader"
                        android:text="Balance Sheet Exposure"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp"
                        android:id="@+id/tvHeaderBalance"
                        android:layout_width="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"/>

                <View android:layout_width="match_parent"
                      android:layout_height="0.8dp"
                      android:background="@color/home_bg"
                      app:layout_constraintTop_toBottomOf="@+id/tvHeaderBalance"
                      android:layout_marginTop="16dp"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:id="@+id/viewBalance"/>

                <View android:layout_width="0dp"
                      android:layout_height="0.8dp"
                      android:background="@color/home_bg"
                      app:layout_constraintEnd_toEndOf="@+id/tvHeaderBalance"
                      android:id="@+id/viewBalance2"
                      android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/view7"
                      app:layout_constraintStart_toStartOf="@+id/rvBalanceSheetAsset"/>

                <android.support.v7.widget.RecyclerView
                        android:padding="4dp"
                        android:text="Current"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/rvBalanceSheetAsset"
                        app:layout_constraintTop_toBottomOf="@+id/textView10"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="12dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="12dp"/>

                <TextView
                        style="@style/TextHeader"
                        android:text="Asset"
                        android:layout_width="0dp"
                        app:layout_constraintStart_toStartOf="@+id/tvHeaderBalance"
                        android:id="@+id/textView10" android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/viewBalance"/>
                <TextView
                        style="@style/TextHeader"
                        android:text="Liabilities"
                        android:layout_width="0dp"
                        android:id="@+id/textView13"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/viewBalance2"
                        android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/viewBalance2"/>
                <View
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="18dp"
                        android:layout_height="10dp"
                        android:id="@+id/view7"
                        app:layout_constraintStart_toStartOf="@+id/textView10"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/rvBalanceSheetAsset"
                />
                <View
                        android:background="@color/orange"
                        android:layout_width="18dp"
                        android:layout_height="10dp"
                        android:id="@+id/view6"
                        app:layout_constraintStart_toStartOf="@+id/textView10"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/rvBalanceLiabilities"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp"/>
                <View
                        android:background="@color/colorPrimary"
                        android:layout_width="18dp"
                        android:layout_height="10dp"
                        android:id="@+id/view8"
                        app:layout_constraintStart_toEndOf="@+id/textView11" android:layout_marginStart="32dp"
                        app:layout_constraintTop_toTopOf="@+id/view7"
                        app:layout_constraintBottom_toBottomOf="@+id/view7"/>
                <View
                        android:background="@color/orange2"
                        android:layout_width="18dp"
                        android:layout_height="10dp"
                        android:id="@+id/view9"
                        app:layout_constraintStart_toEndOf="@+id/textView14"
                        android:layout_marginStart="32dp"
                        app:layout_constraintTop_toTopOf="@+id/view6"
                        app:layout_constraintBottom_toBottomOf="@+id/view6"/>
                <TextView
                        android:textSize="12sp"
                        android:text="IDR Exposure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView11" android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@+id/view7"
                        app:layout_constraintTop_toTopOf="@+id/view7"
                        app:layout_constraintBottom_toBottomOf="@+id/view7"/>
                <TextView
                        android:textSize="12sp"
                        android:text="IDR Exposure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView14"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@+id/view6"
                        app:layout_constraintTop_toTopOf="@+id/view6"
                        app:layout_constraintBottom_toBottomOf="@+id/view6"/>
                <TextView
                        android:textSize="12sp"
                        android:text="USD Exposure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView12"
                        app:layout_constraintStart_toEndOf="@+id/view8" android:layout_marginStart="8dp"
                        app:layout_constraintTop_toTopOf="@+id/view8"
                        app:layout_constraintBottom_toBottomOf="@+id/view8"/>
                <TextView
                        android:textSize="12sp"
                        android:text="USD Exposure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView15"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@+id/view9"
                        app:layout_constraintTop_toTopOf="@+id/view9"
                        app:layout_constraintBottom_toBottomOf="@+id/view9"/>
                <android.support.v7.widget.RecyclerView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/rvBalanceSheetAsset"
                        app:layout_constraintEnd_toEndOf="@+id/rvBalanceSheetAsset"
                        android:id="@+id/rvBalanceLiabilities"
                        app:layout_constraintTop_toBottomOf="@+id/textView13"/>

            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_white"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">
                <TextView
                        style="@style/TextHeader"
                        android:text="Summary Exposure"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp"
                        android:id="@+id/tvHeaderPerformanceAttribute"
                        android:layout_width="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"/>

                <View android:layout_width="match_parent"
                      android:layout_height="0.8dp"
                      android:background="@color/home_bg"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:id="@+id/view3"
                      app:layout_constraintHorizontal_bias="0.0"
                      android:layout_marginTop="8dp"
                      app:layout_constraintTop_toBottomOf="@+id/tvHeaderPerformanceAttribute"/>

                <FrameLayout
                        android:background="@drawable/card_view"
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        app:layout_constraintEnd_toEndOf="@+id/tvHeaderPerformanceAttribute"
                        app:layout_constraintTop_toBottomOf="@+id/view3"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toEndOf="@+id/flSearch" android:id="@+id/frameLayout5"
                >
                </FrameLayout>
                <FrameLayout
                        android:background="@drawable/card_view"
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/view3"
                        app:layout_constraintStart_toStartOf="@+id/tvHeaderPerformanceAttribute"
                        android:id="@+id/flSearch"
                        app:layout_constraintEnd_toStartOf="@+id/frameLayout5" android:layout_marginEnd="12dp">
                </FrameLayout>


                <FrameLayout
                        android:background="@drawable/card_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/flSearch"
                        android:id="@+id/frameLayoutPerformance"
                        app:layout_constraintStart_toStartOf="@+id/tvHeaderPerformanceAttribute"
                        app:layout_constraintEnd_toStartOf="@+id/imgMenuDecision" android:layout_marginTop="8dp">
                    <Spinner
                            android:id="@+id/spinnerPerformance"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"/>
                </FrameLayout>

                <ImageView
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="@null"
                        android:padding="8dp"
                        android:src="@drawable/ic_sort"
                        android:background="@drawable/rec_hallow_primary"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        android:id="@+id/imgMenuDecision"
                        app:layout_constraintStart_toEndOf="@+id/frameLayoutPerformance"
                        android:layout_marginStart="8dp"
                        app:layout_constraintTop_toTopOf="@+id/frameLayoutPerformance"
                        app:layout_constraintBottom_toBottomOf="@+id/frameLayoutPerformance"/>
                <android.support.v7.widget.RecyclerView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/frameLayoutPerformance"
                        app:layout_constraintStart_toStartOf="@+id/frameLayoutPerformance"
                        app:layout_constraintEnd_toEndOf="@+id/imgMenuDecision"
                        android:id="@+id/rvPerformanceAttribute" app:layout_constraintHorizontal_bias="0.0"
                />

                <TextView
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/rec_hallow_primary"
                        android:text="Show All"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvShowAllCashPlacement"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/rvPerformanceAttribute"
                        app:layout_constraintEnd_toEndOf="@+id/rvPerformanceAttribute"
                        app:layout_constraintStart_toStartOf="@+id/rvPerformanceAttribute"
                        android:layout_marginTop="8dp"/>

            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_white"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">
                <TextView
                        style="@style/TextHeader"
                        android:text="Income Statement Sensitivity"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp"
                        android:layout_width="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp" android:id="@+id/textView17"/>

                <View android:layout_width="0dp"
                      android:layout_height="0.8dp"
                      android:background="@color/home_bg"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:id="@+id/view4"
                      app:layout_constraintHorizontal_bias="0.0"
                      android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView17"/>
                <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvIncomeStatement"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/view4"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="12dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="24dp"/>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
