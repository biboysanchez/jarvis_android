<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_bg"
        android:clickable="true"
        android:orientation="vertical"
        android:focusable="true">

    <LinearLayout
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <FrameLayout
                android:background="@drawable/rounded_primary_rad"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/frameLayout"
                tools:layout_editor_absoluteY="16dp">
            <Spinner
                    android:id="@+id/spinnerCurrencySensitivity"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"/>
        </FrameLayout>
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:padding="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_white">

                <TextView
                        style="@style/TextHeader"
                        android:text="USD-IDR Forward Curve Simulation"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp"
                        android:id="@+id/tvHeaderPosition"
                        android:layout_width="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"/>

                <View android:layout_width="match_parent"
                      android:layout_height="0.8dp"
                      android:background="@color/home_bg"
                      app:layout_constraintTop_toBottomOf="@+id/tvHeaderPosition"
                      android:layout_marginTop="16dp"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:id="@+id/view"/>

                <FrameLayout
                        android:padding="8dp"
                        android:background="@drawable/card_view"
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/view"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        app:layout_constraintEnd_toStartOf="@+id/imgMenuPosition"
                        android:id="@+id/frameLayoutPosition">

                    <TextView
                            android:layout_marginStart="8dp"
                            android:layout_gravity="center_vertical"
                            android:text="Implied Forward Rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:layout_marginEnd="8dp"
                            android:textStyle="bold"
                            android:gravity="end"
                            android:layout_marginStart="8dp"
                            android:layout_gravity="center_vertical|end"
                            android:text="20,54%"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </FrameLayout>

                <ImageView
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="@null"
                        android:padding="8dp"
                        android:src="@drawable/ic_sort"
                        android:background="@drawable/rec_hallow_primary"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        android:id="@+id/imgMenuPosition"
                        app:layout_constraintTop_toTopOf="@+id/frameLayoutPosition"
                        app:layout_constraintStart_toEndOf="@+id/frameLayoutPosition"/>

                <com.github.mikephil.charting.charts.LineChart
                        android:layout_width="0dp"
                        android:layout_height="270dp"
                        app:layout_constraintTop_toBottomOf="@+id/frameLayoutPosition"
                        app:layout_constraintStart_toStartOf="@+id/tvHeaderPosition"
                        app:layout_constraintEnd_toEndOf="@+id/tvHeaderPosition"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="24dp"
                        android:id="@+id/lineChartCurrency">

                </com.github.mikephil.charting.charts.LineChart>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_white">

                <TextView
                        style="@style/TextHeader"
                        android:text="Balance Sheet Exposure"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp"
                        android:id="@+id/tvHeaderBalance"
                        android:layout_width="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"/>

                <View android:layout_width="match_parent"
                      android:layout_height="0.8dp"
                      android:background="@color/home_bg"
                      app:layout_constraintTop_toBottomOf="@+id/tvHeaderBalance"
                      android:layout_marginTop="16dp"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:id="@+id/viewBalance"/>

                <FrameLayout
                        android:padding="8dp"
                        android:background="@drawable/card_view"
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/viewBalance"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:id="@+id/frameLayoutBalance" app:layout_constraintEnd_toEndOf="parent">
                </FrameLayout>


            </android.support.constraint.ConstraintLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
