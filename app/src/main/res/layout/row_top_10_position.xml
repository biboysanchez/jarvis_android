<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp"
              android:id="@+id/llRowTopTenOverview"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <TextView
            android:gravity="center_vertical"
            android:id="@+id/tvRowTopTenPortfolio"
            android:layout_width="220dp"
            android:layout_height="54dp"/>

    <LinearLayout
            android:id="@+id/llRowTopTen"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:gravity="center_vertical"
            android:layout_weight="1">
        <TextView
                android:id="@+id/tvRowNatlValue"
                android:gravity="center"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tvRowUnrealized"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tvRowAveCost"
                android:gravity="center"
                android:layout_width="90dp"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tvRowCurrentPrice"
                android:gravity="center"
                android:layout_width="90dp"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
