<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp"
              android:id="@+id/llRowPortfolioPerformance"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <TextView
            android:gravity="center_vertical"
            android:id="@+id/tvRowPortPerformance"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="12sp"
            android:maxWidth="120dp"
            android:layout_width="wrap_content"
            android:layout_height="42dp"/>

    <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/llRowPortPerformance"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1">
        <TextView
                android:id="@+id/tvRowAum"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_width="90dp"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tvRowBenchmark"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tvRowYtd"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tvRowTarget"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
