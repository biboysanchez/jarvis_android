<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:id="@+id/llRowComparation"
        android:gravity="center_vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            android:id="@+id/llMainColumn"
            android:gravity="center_vertical">

        <ImageView
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_remove"
                android:id="@+id/imgRemoveCompany"/>
        <LinearLayout
                android:paddingStart="12dp"
                android:paddingEnd="0dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="64dp">
            <TextView
                    android:textSize="14sp"
                    android:textColor="@color/gray_900"
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvRowCompany"/>
            <TextView
                    android:textSize="12sp"
                    android:textColor="@color/gray_500"
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvRowIndustry"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/llSideDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tvRowLoren"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:text="100"
                android:layout_width="160dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvRowIpsum"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:text="16%"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvRowDolor"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:text="30 Bn"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
