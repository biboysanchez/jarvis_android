<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center">

    <ImageView
            android:src="@drawable/ic_fingerprint"
            android:layout_width="54dp"
            android:layout_height="54dp"/>

    <TextView
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:text="Login Option"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:textColor="@color/gray_700"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Login quick and easy with just the touch of your finger."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:textColor="@color/gray_700"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="To enable this feature, simply go to your settings."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:textStyle="italic"
            android:textColor="@color/gray_400"
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="*This feature is available for devices capable of fingerprint authentication and if you have switched this 'On' in your mobile device."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <CheckBox
            android:id="@+id/cbDialogFingerPrint"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remind me again later"/>

    <Button
            android:id="@+id/btnAlertGotIt"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="Got it"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

</LinearLayout>
