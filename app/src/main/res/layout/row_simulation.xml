<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
            android:id="@+id/tvRowSimulationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>


    <FrameLayout
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/rec_hallow_primary_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@+id/tvRowSimulationTitle"
            app:layout_constraintStart_toStartOf="@+id/tvRowSimulationTitle"
            android:layout_marginTop="4dp" android:id="@+id/frameLayout3">
        <ImageView
                android:padding="4dp"
                android:src="@drawable/ic_arrow_left"
                android:background="?attr/selectableItemBackground"
                android:id="@+id/flBtnLeft"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
    </FrameLayout>

    <FrameLayout
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/rec_hallow_primary_right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:id="@+id/frameLayout4"
            app:layout_constraintTop_toTopOf="@+id/etSimulationInput" app:layout_constraintBottom_toBottomOf="@+id/etSimulationInput">

        <ImageView
                android:padding="4dp"
                android:src="@drawable/ic_right"
                android:id="@+id/flBtnRight"
                android:background="?attr/selectableItemBackground"
                android:layout_width="40dp"
                android:layout_height="40dp"
                tools:layout_editor_absoluteX="328dp"
                tools:layout_editor_absoluteY="47dp"/>
    </FrameLayout>

    <EditText
            android:gravity="center"
            android:hint="0,0%"
            android:background="#e0ece8"
            android:id="@+id/etSimulationInput"
            android:layout_height="40dp"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@+id/frameLayout3"
            app:layout_constraintTop_toTopOf="@+id/frameLayout3"
            app:layout_constraintBottom_toBottomOf="@+id/frameLayout3"
            app:layout_constraintEnd_toStartOf="@+id/frameLayout4"/>

</android.support.constraint.ConstraintLayout>
