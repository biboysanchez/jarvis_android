<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llRowCashMovement"
        android:orientation="vertical"
        android:layout_marginBottom="2dp">

    <TextView
            android:layout_marginStart="8dp"
            android:background="#ecf2f1"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:clickable="true"
            android:focusable="true"
            android:text="Begining Cash"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvRowValue"
            android:id="@+id/tvRowTitle"/>

    <TextView
            android:gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:background="#ecf2f1"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:text="470"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tvRowValue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tvRowTitle"/>

    <LinearLayout
            android:id="@+id/llRowCashMovementView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/tvRowTitle"
            app:layout_constraintStart_toStartOf="@+id/tvRowTitle"
            app:layout_constraintEnd_toEndOf="@+id/tvRowValue"/>

</android.support.constraint.ConstraintLayout>
